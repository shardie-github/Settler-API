{
  "name": "settler-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Reconciliation-as-a-Service API - Complete monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "check": "npm run lint && npm run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "validate": "npm run lint && npm run typecheck && npm run format:check",
    "validate:env": "tsx scripts/check-env.ts production",
    "prepare": "husky install",
    "db:new": "bash scripts/new-migration.sh",
    "db:verify": "bash scripts/verify-migrations.sh",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:diff": "supabase db diff",
    "db:dump": "supabase db dump -f supabase/schema.sql",
    "db:types": "supabase gen types typescript --project-id ${SUPABASE_PROJECT_REF:-your-project-ref} > src/types/database.types.ts",
    "db:migrate:local": "supabase migration up",
    "db:migrate:prod": "supabase db push --include-all",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:status": "prisma migrate status",
    "postinstall": "prisma generate || true"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.4",
  "overrides": {
    "glob": "^10.4.5",
    "rimraf": "^5.0.0",
    "raw-body": "^2.5.2"
  }
}
